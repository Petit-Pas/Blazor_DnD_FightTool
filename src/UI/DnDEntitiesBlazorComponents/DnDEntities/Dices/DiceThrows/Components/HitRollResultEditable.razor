
@if (HitRollResult != null)
{
    <IntInput @bind-Value="HitRollResult.Result" ValidationFor="() => HitRollResult.Result">
        <SuffixRenderFragment>
            @if (Caster != null)
            {
                @HitRollResult.Modifiers.GetScoreModifier(Caster).ModifierString
            }
        </SuffixRenderFragment>
    </IntInput>
}
